<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_add_user"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context="com.mlmishra.bhupendramishra.allelectronics.Controller_program"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".TelephoneDirectory"
    android:layout_gravity="center_horizontal">



    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Soitaab Keygen App (For BHEL ONLY)"
        android:layout_gravity="center"
        android:scrollbars = "vertical"
        android:linksClickable="true"
        android:textColor="#0000FF"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/auimageview"
        android:src="@drawable/bhel"
        android:layout_gravity="center"
        />


    <EditText
        android:id="@+id/ref_key"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your Reference here"
        android:inputType="text"
        />


    <TextView
        android:id="@+id/key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:scrollbars = "vertical"
        android:linksClickable="true"
        android:textColor="#0000FF"

        ></TextView>
    <Button
        android:id="@+id/keygen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="GENERATE KEY"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#0000FF"

        />
    <TextView
        android:id="@+id/aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars = "vertical"
        android:textSize="15sp"
        android:linksClickable="true"
        android:layout_gravity="center"
        android:textColor="#0000FF"


        ></TextView>


</LinearLayout>
    </ScrollView>